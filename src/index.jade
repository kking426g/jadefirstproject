mixin portfolio(title, imageID, intro)
    div(class="col-md-4 col-sm-6 col-xs-6 col-xxs-12 work-item")
        a(href="work.html")
            img(class="img-responsive", src="#{'../images/pic/'}#{imageID}#{'.jpg'}")
            h3.fh5co-work-title #{title} 
            p #{intro}

    div(class="clearfix visible-sm-block")

include var
doctype
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title #{title}
        link(rel="stylesheet", href="../css/animate.css")
        link(rel="stylesheet", href="../css/icomoon.css")
        link(rel="stylesheet", href="../css/bootstrap.css")
        link(rel="stylesheet", href="../css/owl.carousel.min.css")
        link(rel="stylesheet", href="../css/owl.theme.default.min.css")
        link(rel="stylesheet", href="../css/style.css")
        script(src="../js/modernizr-2.6.2.min.js")
    body
        div#fh5so-page
            a(href="#", class="js-fh5co-nav-toggle fh5co-nav-toggle")
                li
            aside#fh5co-aside(role="complementary", class="border js-fullheight")
                h1#fh5co-logo
                    a(href="index.html")
                        img(src="../images/logo.png")
                nav#fh5co-main-menu(role="nacigation")
                    ul
                        li(class="fh5co-active")
                            a(href="index.html") Home
                        li
                            a(href="portfolio.html") Portfolio
                        li
                            a(href="about.html") About
                        li
                            a(href="contact.html") Contact
                div(class="fh5co-footer")
                    p
                        small 
                            span All Rights Reserved
                            span Designed by Joanne
                    ul
                        li
                            a(href="#")
                                i(class="icon-facebook")
                        
                        li
                            a(href="#")
                                i(class="icon-twitter")

                         li
                            a(href="#")
                                i(class="icon-instagram")
                         li
                            a(href="#")
                                i(class="icon-linkedin")   

            div#fh5co-main
                div.fh5co-narrow-content
                    h2(class="fh5co-heading animate-box fadeInLeft animated", date-animate-effect="fadeInLeft")  We Love To Design
                        span See Our Portfolio
                    div(class="row animate-box" data-animate-effect="fadeInLeft")
                    +portfolio( 'Work Title Here', 1, 'Illustration, Branding')  
                    +portfolio( 'Work Title Here', 2, 'Illustration, Branding')
